@page
@model WebAplicacion.Pages.MarcaVehiculo.GridModel
@{
}

<div class="container">

    <div class="card">
        <div class="card-header">
            Marca Vehículo
        </div>
        <div class="card-body">

            <a class="btn btn-outline-success" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Descripción</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.MarcaVehiculoId</td>
                                    <td>@item.Descripcion</td>
                                    <td>@(item.Estado ?"Activo": "Inactivo")</td>
                                    <td>
                                        <a class="btn btn-outline-success" asp-page="Edit" asp-route-id="@item.MarcaVehiculoId">
                                            <i class='bx bx-edit-alt'></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger"
                                                onclick="MarcaVehiculoGrid.OnClickEliminar(@item.MarcaVehiculoId)">
                                            <i class='bx bx-trash'></i>
                                        </button>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script defer src="~/App/MarcaVehiculo/Grid.js"></script>
}